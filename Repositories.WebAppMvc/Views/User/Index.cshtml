@model IEnumerable<Repositories.Logic.Models.User>

@{
    ViewData["Title"] = "Index";
}

<div class="card" style="border-radius: 10px ;background-image: url('https://images.unsplash.com/photo-1519219788971-8d9797e0928e?q=80&w=2044&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');">

    <header class="w3-container w3-blue">
        <h5>Users</h5>
        <p>
            <a class="btn btn-success" asp-action="Create">Create New</a>
        </p>
    </header>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </td>
            </tr>
    }
        </tbody>
    </table>

    <footer class="w3-container w3-blue">
        <h5> @DateTime.Now </h5>
    </footer>

</div>